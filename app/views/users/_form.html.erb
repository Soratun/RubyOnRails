<%= stylesheet_link_tag "form", "data-turbo-track": "reload" %>
<div class="card">
      <div class="box">
        <h1>Register Form</h1>
        <%= form_with(model: @user, local: true) do |form| %>
          <div class="rowName">
            <div>
              <%= form.label :firstname, "First Name" %>
              <%= form.text_field :firstname %>
              <% @user.errors[:firstname].each do |message| %>
                <div class="error-message"><%= message %></div>
              <% end %>
            </div>
            <div>
              <%= form.label :lastname, "Last Name" %>
              <%= form.text_field :lastname %>
              <% @user.errors[:lastname].each do |message| %>
                <div class="error-message"><%= message %></div>
              <% end %>
            </div>
          </div>
          <div class="rowBirth">
            <div class="BirthDate">
              <%= form.label :birthday, "Birth Date" %>
              <%= form.date_field :birthday , max: 18.years.ago.to_date%>
              <% @user.errors[:birthday].each do |message| %>
                <div class="error-message"><%= message %></div>
              <% end %>
            </div>
            <div class="Gender">
              <%= form.label :gender, "Gender" %>
              <div class="Gender_radio">
                <%= form.radio_button :gender, 'Male', id: 'Male' %>
                <%= form.label :gender, "Male", value: 'Male', for: 'Male' %>
                <%= form.radio_button :gender, 'Female', id: 'Female' %>
                <%= form.label :gender, "Female", value: 'Female', for: 'Female' %>
              </div>
              <% @user.errors[:gender].each do |message| %>
                <div class="error-message"><%= message %></div>
              <% end %>
            </div>
          </div>
          <div class="rowEmail">
            <div>
              <%= form.label :email, "Email" %>
              <%= form.email_field :email %>
              <% @user.errors[:email].each do |message| %>
                <div class="error-message"><%= message %></div>
              <% end %>
            </div>
            <div>
              <%= form.label :phonenumber, "Phone Number" %>
              <%= form.telephone_field :phonenumber %>
              <% @user.errors[:phonenumber].each do |message| %>
                <div class="error-message"><%= message %></div>
              <% end %>
            </div>
          </div>
          <div class="Subject">
            <%= form.label :subject, "Subject" %>
            <%= form.select :subject, options_for_select([['HTML', 'HTML'], ['CSS', 'CSS'], ['JS', 'JS']], @user.subject), { prompt: 'Choose option' } %>
            <% @user.errors[:subject].each do |message| %>
                <div class="error-message"><%= message %></div>
              <% end %>
          </div>
          <div>
            <%= form.submit 'Submit' ,class: 'btu'%>
          </div>
        <% end %>
        <%= button_to 'Back', root_path, method: :get, class: ' Back' %>
      </div>
    </div>

<%= stylesheet_link_tag "index", "data-turbo-track": "reload" %>
<div class="container">
<h1>All User</h1>
<%= button_to 'Create New User', new_user_path, method: :get,class: 'btu' %>
<table class="user-table" border="0" cellpadding="10" cellspacing="0">
    <thead>
    <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th> show </th>
        <th> edit </th>
        <th> delete </th>
    </tr>
    </thead>
<tbody>
      <% @users.each do |user| %>
        <tr>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td>
                <%= link_to "Show", user_path(user.id)%> 
            </td>
            <td>
                <%= link_to "Edit", edit_user_path(user.id) %> 
            </td>
            <td>
                <%= link_to "delete", user_path(user.id), method: :delete, data: {turbo_method: :delete,}%>           
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= stylesheet_link_tag "index", "data-turbo-track": "reload" %>
<div class="container">
  <h1>All User</h1>
  <%= button_to 'Create New User', new_user_path, method: :get, class: 'btu' %>
  <table class="user-table" border="0" cellpadding="10" cellspacing="0">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
          <td><%= link_to "Edit", edit_user_path(user.id) %></td>
          <td>
            <%= link_to 'Delete', confirm_destroy_user_path(user), method: :get, data: { turbo_frame: 'modal_frame' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<turbo-frame id="modal_frame">
</turbo-frame>
